<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/css/angular-material.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">

</head>
<body ng-app="myApp" ng-cloak>
    <header>

        <script src="~/js/angular.min.js"></script>
        <script src="~/js/angular-animate.min.js"></script>
        <script src="~/js/angular-aria.min.js"></script>

        <script src="~/js/angular-messages.min.js"></script>
        <script src="~/js/angular-material.min.js"></script>
        <script src="~/js/JavaScript.js"></script>

        <div layout="column" class="relative" layout-fill role="main">

            <md-toolbar ng-controller="LoginCtrl" class="animate-show md-tall md-whiteframe-z1" ng-show="!showSearch">
                <div class="md-toolbar-tools">
                    <md-button class="md-icon-button" ng-click="toggleSidenav('left')" hide-gt-md aria-label="Menu">
                        <md-icon md-svg-icon="navigation:ic_menu_24px" aria-label="Menu"></md-icon>
                    </md-button>

                    <img src="~/Images/NewNewLogo.png" />
                    <span flex></span>

                    @*<md-button class="md-icon-button" aria-label="Search" ng-click="toggleSearch()">
                        <md-icon md-svg-icon="~/css/svg/facebook.svg" aria-label="Search"></md-icon>
                    </md-button>
                    <md-button class="md-icon-button" ng-click="showCustom($event)" aria-label="Login">
                        <md-icon md-svg-icon="~/css/svg/ic_face_white_18px.svg" aria-label="Login"></md-icon>
                    </md-button>*@
                </div>
                <span flex></span>
                @*<md-tabs md-stretch-tabs="always" md-selected="data.selectedIndex">
                    <md-tab id="Home" aria-controls="tab1-content">
                        
                        Home
                    </md-tab>
                    <md-tab id="Search" aria-controls="tab1-content">
                        Search
                    </md-tab>
                    <md-tab id="Saved events" aria-controls="tab2-content" ng-click="GoToSavedEventsX()">
                        Seved events
                        @Html.ActionLink("save", "SavedEvents");
                    </md-tab>
                </md-tabs>*@
            </md-toolbar>
            </div>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
